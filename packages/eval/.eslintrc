{
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "ignorePatterns": [
    "**/node_modules/**"
  ],
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "no-continue": 0
  },
  "env": {
    "node": true
  }
}
